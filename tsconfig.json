{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,   
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "@constants/*": ["./src/constants/*"],
      "@pages/*": ["./src/pages/*"],
      "@store/*": ["./src/store/*"],
      "@utils/*": ["./src/utils/*"],
      "@styles/*": ["./src/constants/styles/*"],
      "@interfaces/*": ["./src/constants/types/interfaces"],
      "@hooks/*": ["./src/utils/hooks/*"],
    }
  },
  "include": [".eslintrc.js", "src/constants/types/global.d.ts", "src"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
